<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>Ovaflowers - Home</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
        <link rel="stylesheet" href="/css/styles.css">   
    </head>
    <body>
        <%- include("partials/header") %>
 
        <main>
            <section class="last-visit">
                    <h3>Ãštimos estrenos</h3>
                    <div class="products">
                        <% for(let product of products ) { %>

                            <div class="col-12 col-sm-6 col-lg-3">
                                <section class="product-box">
                                    <a href="/products/detail/<%= product.producto_id %>">
                                        <figure class="product-box_image">
                                            <img src="/images/<%= product.imagenProducto %>">
                                        </figure>
                                    </a>
                                    <article class="product-box_description">
                                        <h4>$<%= product.precio %></h4>
                                        <span><%= product.nombre %></span>
                    
                                        <i class="fas fa-truck"></i>
                                    </article>
                                </section>
                            </div>
                            <% } %>
                    </div>                
            </section>
            <section class="last-visit">
                <h3>Recomendados</h3>
                <div class="products">
                    <% for(let product of products ) { %>

                        <div class="col-12 col-sm-6 col-lg-3">
                            <section class="product-box">
                                <a href="/sugestedProducts/detail/<%= product.producto_id %>">
                                    <figure class="product-box_image">
                                        <img src="/images/<%= product.imagenProducto %>">
                                    </figure>
                                </a>
                                <article class="product-box_description">
                                    <h4>$<%= product.precio %></h4>
                                    <span><%= product.descripcion %></span>
                                    <p>talle<%= product.talle %></p>
                                    <i class="fas fa-truck"></i>
                                </article>
                            </section>
                        </div>
                        <% } %>
                </div>                
        </section>
        </main>
        <%- include("partials/footer") %>
        
    </body>
</html>