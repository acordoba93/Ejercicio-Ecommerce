<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>Ovaflowers - Home</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
        <link rel="stylesheet" href="/css/styles.css">   
    </head>
    <body>
        <%- include("partials/header") %>
 
        <main>
            <section class="last-visit">
                <h3>Nuestros Productos en Oferta</h3>
        </div>
        <!-- Show the productos en oferta-->
        <% for(let producto of productosEnOferta ) { %>

        <div class="col-12 col-sm-6 col-lg-3">
            <section class="product-box">
                <a href="/products/detail/<%= producto.id %>">
                    <figure class="product-box_image">
                        <img src="/images/<%= producto.imagen %>">
                    </figure>
                    <article class="product-box_image">
                        <h2>$<%= producto.precio %></h2>
                        <span><%= producto.descripcion %></span>
                        <p>talle<%= producto.talle %></p>
                        <i class="fas fa-truck"></i>
                    </article>
                </a>
            </section>
        </div>
        <% } %>

                <div class="products">
                    <article>
                        <a href="/detail">
                            <img src="images/accesorio-perfumeRopa.jpg" alt="MacBook" class="product_img">
                        </a>
                        <div class="main-article">
                            <i class="fa-solid fa-cart-shopping"></i>
                            <p class="price">$.1000</p>
                            <h4 class="description">Perfume para ropa</h4>
                        </div>
                    </article>
                    <article>
                        <a href="/detail">
                            <img src="images/remera-sq10.jpg" alt="MacBook" class="product_img">
                        </a>
                        <div class="main-article">
                            <i class="fa-solid fa-cart-shopping"></i>
                            <p class="price">$2.500</p>
                            <h4 class="description">Remera Revolution</h4>
                        </div>
                    </article>
                    <article>
                        <a href="/detail">
                            <img src="images/remera-sq4.jpg" alt="MacBook" class="product_img">
                        </a>
                        <div class="main-article">
                            <i class="fa-solid fa-cart-shopping"></i>
                            <p class="price">$2.000</p>
                            <h4 class="description">Remera estampada</h4>
                        </div>
                    </article>
                    <article>
                        <a href="/detail">
                            <img src="images/remera-sq3.jpg" alt="MacBook" class="product_img">
                        </a>
                        <div class="main-article">
                            <i class="fa-solid fa-cart-shopping"></i>
                            <p class="price">$2.250</p>
                            <h4 class="description">Remera Hendrix</h4>
                        </div>
                    </article>
                </div>
            </section>
            <section class="offers">
                <h3>Nuestros Productos con Precio de Lista</h3>
         <!-- muestra los productos que poseen precio de lista-->
         <% for(let producto of productosPrecioDeLista ) { %>

            <div class="col-12 col-sm-6 col-lg-3">
                <section class="product-box">
                    <a href="/products/detail/<%= producto.id %>">
                        <figure class="product-box_image">
                            <img src="/images/<%= producto.imagen %>">
                        </figure>
                        <article class="product-box_image">
                            <h2>$<%= producto.precio %></h2>
                            <span><%= producto.descripcion %></span>
                            <p>talle<%= producto.talle %></p>
                            <i class="fas fa-truck"></i>
                        </article>
                    </a>
                </section>
            </div>
            <% } %>
            </section>
        </main>
        <%- include("partials/footer") %>
        
    </body>
</html>